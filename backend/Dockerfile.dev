# Development Dockerfile - install dependencies system-wide for volume mounts
FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    POETRY_HOME="/opt/poetry" \
    PATH="/opt/poetry/bin:$PATH"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -

# Copy only pyproject.toml first (ignore existing lock file)
COPY pyproject.toml ./

# Configure poetry to not create virtual environment (install system-wide)
RUN poetry config virtualenvs.create false

# Generate fresh lock file from pyproject.toml
RUN poetry lock

# Install dependencies system-wide
RUN poetry install --no-root

EXPOSE 8000

# Use poetry to run the app directly (no virtual environment needed)
CMD ["poetry", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]