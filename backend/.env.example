# Backend Environment Variables

# Project Settings
PROJECT_NAME=Polylog
VERSION=1.0.0
DEBUG=True
PRODUCTION=False

# API Settings
API_V1_STR=/api/v1
PORT=8000

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=polylog

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=polylog
REDIS_TTL=3600

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Google Cloud AI Platform (Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=google-credentials.json # Place at root of /backend
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.5-pro
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS_STR=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
